{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*",
    "src/typings/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "dist/*"
  ],
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "svelte"
    ],
    "typeRoots": [
      "src/typings"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}